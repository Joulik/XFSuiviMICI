<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFSuiviMICI.LabWorkPage">
    <ContentPage.Content>

        <Grid>
            
            <ListView x:Name="labWorkListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding TestName }"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Image Grid.Column="0" Grid.Row="0"
               Source="add_green.png"
               HorizontalOptions="Center"
               VerticalOptions="EndAndExpand"
               Margin="0,0,0,0"
               HeightRequest="96"
               WidthRequest="96" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="LabTapGestureRecognizer_Tapped" />
                    <!--Command="{Binding clickNewCard}"
                  CommandParameter="3"-->
                </Image.GestureRecognizers>
            </Image>
            
        </Grid>
        
    </ContentPage.Content>
</ContentPage>