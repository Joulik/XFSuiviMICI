<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:XFSuiviMICI.ViewModels"
             x:Class="XFSuiviMICI.DailyReportDetailPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:DailyReportDetailVM x:Key="vm" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BindingContext="{StaticResource vm}">
                <!--Date-->
                <Label Text="Date"
                       Margin="25,0,0,0"
                       FontSize="Large"/>
                <DatePicker x:Name="dateDaiylReportPicked"
                            Format="dd/MM/yyyy"
                            FontSize="Large"
                            Margin="30,0,0,0"
                            Date="{Binding SelectedDailyReport.DateDailyReport, StringFormat='{}{0:dd/MM/yyyy}'}" />
            
                <!--Weight-->
                <Label Text="Poids (kg)"
                       Margin="25,0,0,0"
                       FontSize="Large"/>
                <Entry x:Name="weight"
                       Keyboard="Telephone"
                       Margin="25,0,0,0"
                       FontSize="Large"
                       Text="{Binding SelectedDailyReport.Weight}"/>

                <!--BowelMouvement-->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Nombre de selles"
                           Margin="25,0,30,0"
                           FontSize="Large"/>
                    <Label x:Name="countBowelMovement"
                           FontSize="Large"
                           Text="0"/>
                </StackLayout>

                <Stepper Minimum="0"
                         Maximum="30"
                         Increment="1"
                         HorizontalOptions="Center"
                         ValueChanged="OnStepperValueChanged"
                         Value="{Binding SelectedDailyReport.BowelMovement}"/>

                <!--Diahrrea-->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Diarrhée"
                           Margin="25,0,0,0"
                           FontSize="Large"/>
                    <Switch x:Name="switchDiarrhea"
                            OnColor="#ff6868"
                            Margin="50,0,0,0"
                            IsToggled="{Binding SelectedDailyReport.Diarrhea}"
                            Toggled="SwitchDiarrheaToggled"/>

                    <Label x:Name="labelDiarrhea"
                           Text="non"
                           Margin="0,5,0,0"/>
                </StackLayout>

                <!--BloodOrMucus-->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Sang et/ou glaires"
                           Margin="25,0,0,0"
                           FontSize="Large"/>
                    <Switch x:Name="switchBloodMucus"
                            OnColor="#ff6868"
                            Margin="50,0,0,0"
                            IsToggled="{Binding SelectedDailyReport.BloodOrMucus}"
                            Toggled="SwitchBloodMucusToggled"/>

                    <Label x:Name="labelBloodMucus"
                           Text="non"
                           Margin="0,5,0,0"/>
                </StackLayout>

            <!--AbdominalPain-->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Maux de ventre"
                           Margin="25,0,0,0"
                           FontSize="Large"/>
                    <Switch x:Name="switchAdbominalPain" 
                            OnColor="#ff6868"
                            Margin="50,0,0,0"
                            IsToggled="{Binding SelectedDailyReport.AbdominalPain}"
                            Toggled="SwitchAbdominalPainToggled"/>

                    <Label x:Name="labelAbdominalPain"
                           Text="non"
                           Margin="0,5,0,0"/>
                </StackLayout>


                <!--Tiredness-->
                <StackLayout Orientation="Horizontal">
                    <Label Text="Fatigue"
                           Margin="25,0,0,0"
                           FontSize="Large"/>
                    <Switch x:Name="switchTiredness"
                            OnColor="#ff6868"
                            Margin="50,0,0,0"
                            IsToggled="{Binding SelectedDailyReport.Tiredness}"
                            Toggled="SwitchTirednessToggled"/>

                    <Label x:Name="labelTiredness"
                           Text="non"
                           Margin="0,5,0,0"/>
                </StackLayout>

                <!--HeartRate-->
                <Label Text="Fréquence cardiaque (BPM)"
                       Margin="25,0,0,0"
                       FontSize="Large"/>
                <Entry x:Name="heartRate"
                       Keyboard="Numeric"
                       Margin="25,0,0,0"
                       FontSize="Large"
                       Text="{Binding SelectedDailyReport.HeartRate}"/>

                <!--Systolic-->
                <Label Text="Pression systolique (mmHg)"
                       Margin="25,0,0,0"
                       FontSize="Large"/>
                <Entry x:Name="systolic"
                       Keyboard="Numeric"
                       Margin="25,0,0,0"
                       FontSize="Large"
                       Text="{Binding SelectedDailyReport.Systolic}"/>

                <!--Diastolic-->
                <Label Text="Pression diastolique (mmHg)"
                       Margin="25,0,0,0"
                       FontSize="Large"/>
                <Entry x:Name="diastolic"
                       Keyboard="Numeric"
                       Margin="25,0,0,0"
                       FontSize="Large"
                       Text="{Binding SelectedDailyReport.Diastolic}"/>

                <Button Text="Sauvegarder modifications"
                        x:Name="updateDailyReportButton"
                        Command="{Binding Source={StaticResource vm}, Path=UpdateCommand}"/>

                <Button Text="Effacer"
                        x:Name="deleteDailyReportButton"
                        Command="{Binding Source={StaticResource vm}, Path=DeleteCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>